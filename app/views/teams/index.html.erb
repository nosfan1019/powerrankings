<h1>Listing teams</h1>

<table id="teams">
  <thead>
    <tr>
      <th>Team</th>
      <th>Sports</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @teams.each do |team| %>
    <tr>
      <td><%= team.team %></td>
      <td><%= team.sport_id %></td>
      <td><%= link_to 'Show', team %></td>
      <td><%= link_to 'Edit', edit_team_path(team) %></td>
      <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

